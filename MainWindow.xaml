<Window x:Class="calendar2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calendar2"
        xmlns:conv="clr-namespace:calendar2.Converters"
        mc:Ignorable="d"
        Title="MainWindow" Height="590" Width="1000" FontFamily="Trebuchet MS" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="Transparent">


    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"></ColumnDefinition>
                <ColumnDefinition Width="3.5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="20 0 0 20" Background="#850340" Grid.Column="0"/>
            <Border CornerRadius="0 20 20 0" MouseDown="Border_MouseDown" Background="#635b9c" Grid.Column="1"/>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"></ColumnDefinition>
                <ColumnDefinition Width="3.5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 50 0 30">
                    <Button Content="&lt;  " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="2020  " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="2020  " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content=" 2020   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0" FontSize="15" Foreground="#cacaca"/>
                    <Button Content="2020  " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="2020" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="  >" Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 -20 0 30">
                    <Button Content="1   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="2   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="3   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="4   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="5   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="6   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="7   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="8   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="9   " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="10  " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                    <Button Content="11  " Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Foreground="#cacaca"/>
                    <Button Content="12  " Background="Transparent" BorderBrush="Transparent" BorderThickness="0"/>
                </StackPanel>
                <Separator Height="0.8" Background="#cacaca" Margin="20 -25 20 10"/>
                <TextBlock Text="November" TextAlignment="Center" FontWeight="SemiBold" FontSize="21" Margin="0,-10,0,5"/>
                <Calendar SelectedDate="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Background="#9a5468" Margin="-200 0 0 0 ">
                    <Calendar.RenderTransform>
                        <ScaleTransform ScaleX="1.4" ScaleY="1.2"/>
                    </Calendar.RenderTransform>
                </Calendar>
                <StackPanel Margin="0 50 0 0 ">
                    <TextBox Margin="15,10,15,0" Height="30" Text="{Binding NewTask, UpdateSourceTrigger=PropertyChanged}" />

                    <ComboBox  Margin="15,10,15,0" Height="30" SelectedValue="{Binding SelectedDay, Mode=TwoWay, Converter={StaticResource DayOfWeekConverter}}">
                        <ComboBoxItem Content="Sunday"/>
                        <ComboBoxItem Content="Monday"/>
                        <ComboBoxItem Content="Tuesday"/>
                        <ComboBoxItem Content="Wednesday"/>
                        <ComboBoxItem Content="Thursday"/>
                        <ComboBoxItem Content="Friday"/>
                        <ComboBoxItem Content="Saturday"/>
                    </ComboBox>

                    <TextBox Margin="15,10,15,0" Height="30" Text="{Binding SelectedStartTime, Mode=TwoWay, Converter={StaticResource TimeSpanConverter}, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox Margin="15,10,15,0" Height="30" Text="{Binding SelectedEndTime, Mode=TwoWay, Converter={StaticResource TimeSpanConverter}, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

            </StackPanel>
            <StackPanel Grid.Column="1">
                <Grid x:Name="ScheduleGrid" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*"></RowDefinition>
                        <RowDefinition Height="1.2*"></RowDefinition>
                        <RowDefinition Height="0.5*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock FontFamily="Times New Roman" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" TextAlignment="Center" Margin="0,0,0,5">
                        <Run Text="{Binding WeekDates[0], StringFormat={}{0:dddd}}" />
                        <LineBreak/>
                        <Run Text="{Binding WeekDates[0], StringFormat={}{0:dd}}" />
                    </TextBlock>
                    <TextBlock FontFamily="Times New Roman" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" TextAlignment="Center" Margin="0,0,0,5">
                        <Run Text="{Binding WeekDates[1], StringFormat={}{0:dddd}}" />
                        <LineBreak/>
                        <Run Text="{Binding WeekDates[1], StringFormat={}{0:dd}}" />
                    </TextBlock>
                    <TextBlock FontFamily="Times New Roman" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" TextAlignment="Center" Margin="0,0,0,5">
                        <Run Text="{Binding WeekDates[2], StringFormat={}{0:dddd}}" />
                        <LineBreak/>
                        <Run Text="{Binding WeekDates[2], StringFormat={}{0:dd}}" />
                    </TextBlock>
                    <TextBlock FontFamily="Times New Roman" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" TextAlignment="Center" Margin="-1,0,-1,5">
                        <Run Text="{Binding WeekDates[3], StringFormat={}{0:dddd}}" />
                        <LineBreak/>
                        <Run Text="{Binding WeekDates[3], StringFormat={}{0:dd}}" />
                    </TextBlock>
                    <TextBlock FontFamily="Times New Roman" Grid.Row="1" Grid.Column="6" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" TextAlignment="Center" Margin="0,0,0,5">
                        <Run Text="{Binding WeekDates[4], StringFormat={}{0:dddd}}" />
                        <LineBreak/>
                        <Run Text="{Binding WeekDates[4], StringFormat={}{0:dd}}" />
                    </TextBlock>
                    <TextBlock FontFamily="Times New Roman" Grid.Row="1" Grid.Column="7" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" TextAlignment="Center" Margin="0,0,0,5">
                        <Run Text="{Binding WeekDates[5], StringFormat={}{0:dddd}}" />
                        <LineBreak/>
                        <Run Text="{Binding WeekDates[5], StringFormat={}{0:dd}}" />
                    </TextBlock>
                    <TextBlock FontFamily="Times New Roman" Grid.Row="1" Grid.Column="8" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" TextAlignment="Center" Margin="0,0,0,5">
                        <Run Text="{Binding WeekDates[6], StringFormat={}{0:dddd}}" />
                        <LineBreak/>
                        <Run Text="{Binding WeekDates[6], StringFormat={}{0:dd}}" />
                    </TextBlock>
                    <TextBlock Grid.Row="3" FontFamily="Times New Roman Bold" Text="08:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="4" FontFamily="Times New Roman Bold" Text="09:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="5" FontFamily="Times New Roman Bold" Text="10:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="6" FontFamily="Times New Roman Bold" Text="11:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="7" FontFamily="Times New Roman Bold" Text="12:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="8" FontFamily="Times New Roman Bold" Text="01:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="9" FontFamily="Times New Roman Bold" Text="02:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="10" FontFamily="Times New Roman Bold" Text="03:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="11" FontFamily="Times New Roman Bold" Text="04:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="12" FontFamily="Times New Roman Bold" Text="05:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="13" FontFamily="Times New Roman Bold" Text="06:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="14" FontFamily="Times New Roman Bold" Text="07:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="15" FontFamily="Times New Roman Bold" Text="08:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="16" FontFamily="Times New Roman Bold" Text="09:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="17" FontFamily="Times New Roman Bold" Text="10:00" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" TextAlignment="Center" Margin="0,0,0,5" />
                    <TextBlock Grid.Row="0" FontFamily="Times New Roman Bold" Text="Calendar" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="35" TextAlignment="Center" Grid.ColumnSpan="2" Margin="-10,5,18,5" />

                    <ItemsControl ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="LightBlue" Margin="2" CornerRadius="5">
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>


                    <Button Command="{Binding AddTaskCommand}" Click="AddTask_Click" Grid.Column="7" Grid.Row="0" Grid.ColumnSpan="2" BorderThickness="2,2,2,2" Height="35" Margin="15 0 15 0" Background="#850340">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" BorderBrush="Black"  BorderThickness="2" Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/AddLogo.png"/>
                            <TextBlock FontFamily="Times New Roman" Text="New Task" FontSize="20" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding DeleteTaskCommand, UpdateSourceTrigger=Default}"
                        Grid.Column="0" Grid.Row="1" Height="30" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                        <Image Source="Images/DeleteLogo.png"/>
                    </Button>
                    <Button Command="{Binding UpdateTaskCommand}" Grid.Column="0" Grid.Row="4" Height="35" Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                        <Image Source="Images/UpdateLogoo.png"/>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>

    </Grid>
</Window>